@model Model.Framework.Book

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading" style="font-weight:bold; font-size:20px">
                Thông tin chi tiết
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        <div>
                            <table class="table">
                                <tr>
                                    <td>
                                        Tên sách
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Title)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Tác giả
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.AuthorName)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Giá
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.Price)
                                    </td>

                                </tr>
                                <tr>
                                    <td>
                                        Năm xuất bản
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.Year)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Hình ảnh của sách
                                    </td>

                                    <td>
                                        <img src="@Url.Content("~/Content/Image/" + @Model.CoverPage )" alt="cover page" width="45" />
                                    </td>
                                </tr>
                            </table>

                            <h2>Danh sách chương</h2>
                            <hr />
                            <ul>
                                @if (Model.Chapters.Count > 0)
                                {
                                    foreach (var item in Model.Chapters)
                                    {
                                        <li>
                                            <strong>@item.ChapterName</strong>
                                            <br />
                                            <span>@item.ShortContent</span>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>

                        <p>
                            @Html.ActionLink("Edit", "EditBook", new { id = Model.BookId }) |
                            @Html.ActionLink("Back to List", "getListBook")
                        </p>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

